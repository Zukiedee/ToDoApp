<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <EditText
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="45dp"
        android:id="@+id/inputText"
        android:textSize="@dimen/default_font_size"
        android:focusedByDefault="true"
        android:background="@drawable/add_task_background"
        android:fontFamily="@string/font_app_plain"
        android:paddingStart="8dp"
        android:paddingEnd="2dp"
        android:hint="@string/hint_enter_new_task"
        android:importantForAutofill="no" />

    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="45dp"
        android:text="@string/button_save_new_task"
        android:padding="5dp"
        android:enabled="false"
        android:layout_marginStart="4dp"
        android:fontFamily="@string/font_app_plain"
        android:background="@drawable/rounded_active_button"
        android:textColor="@color/white"
        android:textSize="@dimen/default_font_size"
        android:textAllCaps="true"
        android:id="@+id/button_save" />

</LinearLayout>